
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado</title>
</head>
<body>
    <div> 

        <table>
            <tr>
                <td>ID</td>
                <td>Nombre</td>
                <td>Apellidos</td>
                <td>Fecha Nacimiento</td>
                <td>Direccion</td>
                <td>Telefono</td>
            </tr>
            @for (int i = 0; i < Model.size(); i++)
            {
                <tr>
                    <td>@Model.getPersona(i).getID()</td>
                    <td>@Model.getPersona(i).getNombre()</td>
                    <td>@Model.getPersona(i).getApellidos()</td>
                    <td>@Model.getPersona(i).getFechaNac().Date</td>
                    <td>@Model.getPersona(i).getDireccion()</td>
                    <td>@Model.getPersona(i).getTelefono()</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
